{% extends 'base.html.twig' %}

{% block title %}Details Question{% endblock %}

{% block body %}
    <h1>Détails de la Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ question.title }}</td>
            </tr>
            <tr>
                <th>Pièce jointe</th>
                <td>
                    <a href="{{ asset('uploads/pj/' ~ question.attached) }}">Voir pj (image ou video)</a>
                </td>
            </tr>
            <tr>
                <th>TexteComplementaire</th>
                <td>{{ question.texteComplementaire }}</td>
            </tr>
            <tr>
                <th>AutreTexte</th>
                <td>{{ question.autreTexte }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ question.etat }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ question.motif }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('questions_index', {'article': article, 'parent': parent}) }}">back to list</a>
    {% if is_granted('ROLE_EDITOR')or is_granted('ROLE_ADMIN') %}
        <a
            href="{{ path('questions_edit', {'id': question.id, 'article': article, 'parent': parent}) }}">edit</a>

        {{ include('questions/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}