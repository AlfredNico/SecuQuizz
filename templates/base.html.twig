  <script src="{{ asset('build/libs/flot/jquery.flot.js') }}"></script>
  <script src="{{ asset('build/libs/flot/jquery.flot.pie.js') }}"></script>
  <script src="{{ asset('build/libs/flot/jquery.flot.time.js') }}"></script>
  <script src="{{ asset('build/libs/flot/jquery.flot.stack.js') }}"></script>
  <script src="{{ asset('build/libs/flot/jquery.flot.crosshair.js') }}"></script>
  <script src="{{ asset('build/libs/flot.tooltip/js/jquery.flot.tooltip.min.js') }}"></script>
  <script src="{{ asset('build/js/pages/chart/chart-page-init.js') }}"></script>
  <script src="{{ asset('build/datatables/datatables.min.js') }}"></script>
    <script src="{{ asset('build/my_jquery_2.js') }}"></script>
  <script src="{{ asset('build/my_jquery.js') }}"></script>
{% block javascripts %} {% endblock %}


    </body>
    </html>